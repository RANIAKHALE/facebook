@model IList<Facebook_Project.Models.userinfo>

@{
    ViewBag.Title = "Index";
}
<style>

    .user {
        border-style: solid;
        border-color: rgb(45, 52, 129);
       
    }
</style>
<br />
<br />
<div>
    <form method="post" action="/Friend/SearchByName">
        <label>Name</label>
        <input type="text" name="Name" />
        <input type="submit" value="Search" />
    </form>
</div>
<br />
<div>
    <form method="post" action="/Friend/SearchByEmail">
        <label>Email</label>
        <input type="text" name="Email" />
        <input type="submit" value="Search" />
    </form>
</div>
<div class="row">
    @{foreach (var item in Model)
        {
            <div class="col-sm-4 col-xs-12 user">
                <img src="@item.photo" height="100px" />
                <h4>@item.Fname @item.lname</h4>
                <a href="/userinfoes/Details/@item.Id">go to details</a>
            </div>
        }
    }
</div>
